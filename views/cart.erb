<h2>Your cart</h2>
<table class="table table-striped">
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Price</th>
    <th>Qty</th>
  </tr>
  <%@order.each_with_index do |item,i|%>
    <tr>
      <td><%= i+1%></td>
      <td><%= item[0].title%></td>
      <td><%= item[0].price%></td>
      <td><%= item[1]%></td>
    </tr>
  <%end%>
  <tr>
    <th>Total</th>
    <td></td>
    <th><%= @total_price %></th>
    <th><%= @total_qty %></th>
  </tr>
</table>
<form action='/order_placed' method="POST">
  <input name="orders_line" type='hidden' value="<%= @orders_line%>">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="order[name]" placeholder="Enter name">
  </div>
  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="text" class="form-control" id="phone" name="order[phone]" placeholder="Enter your phone">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" name="order[address]" placeholder="Enter address">
  </div>
  <button type="submit" class="btn btn-success">Submit</button>
  <span class="btn btn-danger" onclick="cancelOrder()">Cancel</span>
</form>